{
  "name": "creatorcircles",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd packages/backend && npm run dev & cd packages/frontend && npm run dev",
    "test": "npm -w backend test",
    "lint": "npm -w backend run lint || true && npm -w frontend run lint || true",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/node": "^10.25.0",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.2.1",
    "mongoose": "^8.19.3",
    "prom-client": "^15.1.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  }
}
